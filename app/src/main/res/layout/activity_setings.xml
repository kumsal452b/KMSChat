<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SetingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setings_circleimage"
        android:layout_width="252dp"
        android:layout_height="204dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="44dp"
        android:src="@drawable/ic_baseline_supervised_user_circle_24"
        app:layout_constraintBottom_toTopOf="@+id/seting_displayname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/seting_changeimage"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="87dp"
        android:text="Change Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seting_statuschanges" />

    <Button
        android:id="@+id/seting_statuschanges"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@color/colorAccent"
        android:text="Change Status"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/seting_changeimage"
        app:layout_constraintEnd_toEndOf="@+id/seting_changeimage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/seting_changeimage"
        app:layout_constraintTop_toBottomOf="@+id/seting_hi" />

    <TextView
        android:id="@+id/seting_displayname"
        android:layout_width="409dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="39dp"
        android:text="Display Name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/seting_hi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setings_circleimage" />

    <TextView
        android:id="@+id/seting_hi"
        android:layout_width="406dp"
        android:layout_height="103dp"
        android:layout_above="@+id/seting_changeimage"

        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="40dp"
        android:text="Hi there! I'm using KMSChat App"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/seting_statuschanges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seting_displayname" />

</androidx.constraintlayout.widget.ConstraintLayout>