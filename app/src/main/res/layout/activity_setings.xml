<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetingActivity"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setings_circleimage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:src="@drawable/ic_baseline_supervised_user_circle_24" />

    <Button
        android:id="@+id/seting_changeimage"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="165dp"
        android:text="Change Image"/>

    <Button
        android:id="@+id/seting_statuschanges"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="102dp"
        android:text="Change Status"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/seting_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="333dp"
        android:text="Display Name"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/seting_hi"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_above="@+id/seting_changeimage"


        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="46dp"
        android:layout_marginTop="333dp"
        android:layout_marginBottom="33dp"
        android:text="Hi there! I'm using KMSChat App"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</RelativeLayout>