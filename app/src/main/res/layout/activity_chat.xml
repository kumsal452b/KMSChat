<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <include layout="@layout/app_toolbar_dark" android:id="@+id/chat_toolbar"/>
    <include layout="@layout/chat_custom_bar"/>

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/chat_addmessage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/add_button" />

        <TextView
            android:id="@+id/chat_message"
            android:layout_width="316dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="auto"
            android:gravity="center_vertical"
            android:hint="Add text to new message"
            android:textAlignment="inherit"
            android:textDirection="firstStrongRtl"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/char_sendButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/send_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>