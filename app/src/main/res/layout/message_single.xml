<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <TextView
        android:id="@+id/message_text_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/message_text_bacground2"
        android:padding="20dp"
        android:text="deneme"
        android:textColor="@color/dialogBkgIOSLight"
        app:layout_constraintEnd_toStartOf="@+id/message_image_layout2"
        app:layout_constraintTop_toTopOf="@+id/message_image_layout2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_image_layout"
        android:layout_width="56dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_image_layout2"
        android:layout_width="56dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:background="@drawable/message_text_background"
        android:padding="20dp"
        android:text="hello send message"
        android:textColor="@color/dialogBkgIOSLight"
        app:layout_constraintStart_toEndOf="@+id/message_image_layout"
        app:layout_constraintTop_toTopOf="@+id/message_image_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>